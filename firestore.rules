rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users:
    // - Anyone can read any user's profile.
    // - Only the user themselves can create or update their own profile.
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Billboards, Vendors:
    // - Anyone can read billboards and vendors.
    // - Only authenticated admins can create, update, or delete them.
    // (Assuming an 'admin' custom claim is set on the user's token)
    match /billboards/{billboardId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /vendors/{vendorId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Bookings:
    // - Users can create their own bookings.
    // - Users can read their own bookings.
    // - Admins can read all bookings.
    match /bookings/{bookingId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Updates/deletes might have more complex logic (e.g., only before start date, by admin)
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Events:
    // - Authenticated users can create events.
    // - Only admins can read all events.
    match /events/{eventId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
